@model Sql2Csv.Web.Models.DatabaseAnalysisViewModel
@{
    ViewData["Title"] = "Database Analysis";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-secondary-900">Database Analysis</h1>
                <p class="text-secondary-600 mt-2">
                    <span class="font-medium">@Model.DatabaseName</span> •
                    @Model.Tables.Count tables •
                    Analysis completed in @Model.AnalysisDuration.TotalMilliseconds.ToString("F0")ms
                </p>
            </div>
            <a asp-action="Index" class="btn-secondary">
                <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Upload New File
            </a>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mb-8">
        <div class="bg-white rounded-xl shadow-sm border border-secondary-200 p-6">
            <h2 class="text-xl font-semibold text-secondary-900 mb-4">Available Actions</h2>
            <div class="grid sm:grid-cols-2 gap-4" x-data="{ selectedTables: [] }">
                <form asp-action="ExportTables" method="post" class="space-y-4">
                    <div class="p-4 border border-secondary-200 rounded-lg">
                        <h3 class="font-medium text-secondary-900 mb-2">Export to CSV</h3>
                        <p class="text-sm text-secondary-600 mb-4">Select tables to export as CSV files</p>
                        <div class="space-y-2 max-h-32 overflow-y-auto">
                            @foreach (var table in Model.Tables)
                            {
                                <label class="flex items-center">
                                    <input type="checkbox" name="selectedTables" value="@table.Name"
                                        class="rounded border-secondary-300 text-primary-600 focus:ring-primary-500" />
                                    <span class="ml-2 text-sm">@table.Name (@table.RowCount rows)</span>
                                </label>
                            }
                        </div>
                        <button type="submit" class="btn-primary w-full mt-4">
                            Export Selected Tables
                        </button>
                    </div>
                </form>

                <form asp-action="GenerateCode" method="post" class="space-y-4">
                    <div class="p-4 border border-secondary-200 rounded-lg">
                        <h3 class="font-medium text-secondary-900 mb-2">Generate Code</h3>
                        <p class="text-sm text-secondary-600 mb-4">Generate C# model classes</p>
                        <div class="space-y-2 max-h-32 overflow-y-auto">
                            @foreach (var table in Model.Tables)
                            {
                                <label class="flex items-center">
                                    <input type="checkbox" name="selectedTables" value="@table.Name"
                                        class="rounded border-secondary-300 text-primary-600 focus:ring-primary-500" />
                                    <span class="ml-2 text-sm">@table.Name</span>
                                </label>
                            }
                        </div>
                        <div class="mt-4">
                            <label for="namespaceName" class="block text-xs text-secondary-700 mb-1">Namespace</label>
                            <input type="text" name="namespaceName" value="Generated.Models" class="input text-sm"
                                placeholder="Generated.Models" />
                        </div>
                        <button type="submit" class="btn-primary w-full mt-4">
                            Generate Classes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Tables Overview -->
    <div class="grid lg:grid-cols-2 gap-8">
        <!-- Tables List -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-semibold text-secondary-900">Tables</h2>
                <p class="text-secondary-600 mt-1">Database structure overview</p>
            </div>

            <div class="space-y-4">
                @foreach (var table in Model.Tables)
                {
                    <div class="border border-secondary-200 rounded-lg p-4 hover:bg-secondary-50 transition-colors"
                        x-data="{ expanded: false }">
                        <div class="flex items-center justify-between cursor-pointer" @@click="expanded = !expanded">
                            <div class="flex items-center space-x-3">
                                <div class="bg-primary-100 rounded-lg p-2">
                                    <svg class="w-4 h-4 text-primary-600" xmlns="http://www.w3.org/2000/svg" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-medium text-secondary-900">@table.Name</h3>
                                    <p class="text-sm text-secondary-600">@table.Columns.Count columns • @table.RowCount
                                        rows</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">
                                @if (table.HasPrimaryKey)
                                {
                                    <span class="badge-primary">PK</span>
                                }
                                <svg class="w-4 h-4 text-secondary-400 transform transition-transform"
                                    :class="{ 'rotate-180': expanded }" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 9l-7 7-7-7" />
                                </svg>
                            </div>
                        </div>

                        <div x-show="expanded" x-transition class="mt-4 pt-4 border-t border-secondary-200">
                            <div class="overflow-x-auto">
                                <table class="min-w-full">
                                    <thead>
                                        <tr class="border-b border-secondary-200">
                                            <th class="text-left text-xs font-medium text-secondary-500 uppercase py-2">
                                                Column</th>
                                            <th class="text-left text-xs font-medium text-secondary-500 uppercase py-2">Type
                                            </th>
                                            <th class="text-left text-xs font-medium text-secondary-500 uppercase py-2">Null
                                            </th>
                                            <th class="text-left text-xs font-medium text-secondary-500 uppercase py-2">Key
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-secondary-100">
                                        @foreach (var column in table.Columns)
                                        {
                                            <tr>
                                                <td class="py-2 text-sm font-medium text-secondary-900">@column.Name</td>
                                                <td class="py-2 text-sm text-secondary-600 font-mono">@column.DataType</td>
                                                <td class="py-2 text-sm">
                                                    @if (column.IsNullable)
                                                    {
                                                        <span class="badge-warning">NULL</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge-secondary">NOT NULL</span>
                                                    }
                                                </td>
                                                <td class="py-2 text-sm">
                                                    @if (column.IsPrimaryKey)
                                                    {
                                                        <span class="badge-primary">PK</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Schema Report -->
        <div class="card">
            <div class="card-header">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-xl font-semibold text-secondary-900">Schema Report</h2>
                        <p class="text-secondary-600 mt-1">Detailed database analysis</p>
                    </div>
                    <button onclick="copyToClipboard(@Html.Raw(Json.Serialize(Model.SchemaReport)))"
                        class="btn-outline text-sm">
                        <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        Copy
                    </button>
                </div>
            </div>

            <div class="code-block whitespace-pre-wrap text-xs leading-relaxed max-h-96 overflow-y-auto">
                @Model.SchemaReport</div>
        </div>
    </div>
</div>
