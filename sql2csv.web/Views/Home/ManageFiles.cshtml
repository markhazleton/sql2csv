@model Sql2Csv.Web.Models.FileManagementViewModel
@{
    ViewData["Title"] = "Manage Files - SQLite to CSV Converter";
}

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-secondary-900">Manage Files</h1>
                <p class="text-secondary-600 mt-2">Manage your uploaded database files and storage</p>
            </div>
            <a asp-action="Index" class="btn-secondary">
                <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Upload New File
            </a>
        </div>
    </div>

    <!-- Storage Summary -->
    <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="card">
            <div class="card-body text-center">
                <div class="text-2xl font-bold text-primary-600">@Model.Files.Count</div>
                <div class="text-sm text-secondary-600">Files Stored</div>
            </div>
        </div>
        <div class="card">
            <div class="card-body text-center">
                <div class="text-2xl font-bold text-primary-600">@Model.FormattedStorageSize</div>
                <div class="text-sm text-secondary-600">Total Storage</div>
            </div>
        </div>
        <div class="card">
            <div class="card-body text-center">
                <div class="text-2xl font-bold text-primary-600">@Model.Files.Sum(f => f.TableCount)</div>
                <div class="text-sm text-secondary-600">Total Tables</div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-green-800">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-800">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        </div>
    }

    <!-- Files List -->
    @if (Model.Files.Any())
    {
        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-semibold text-secondary-900">Stored Files</h2>
            </div>
            <div class="card-body p-0">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-secondary-200">
                        <thead class="bg-secondary-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">File</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">Tables</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">Size</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">Uploaded</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">Last Accessed</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-secondary-200">
                            @foreach (var file in Model.Files)
                            {
                                <tr class="hover:bg-secondary-50" x-data="{ editingDescription: false, description: '@(file.Description ?? "")' }">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <div class="h-10 w-10 rounded-lg bg-primary-100 flex items-center justify-center">
                                                    <svg class="h-6 w-6 text-primary-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 1.79 4 4 4h8c2.21 0 4-1.79 4-4V7M4 7V4c0-2.21 1.79-4 4-4h8c2.21 0 4 1.79 4 4v3M4 7h16m-5-3v3" />
                                                    </svg>
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-secondary-900">@file.OriginalFileName</div>
                                                <div x-show="!editingDescription">
                                                    @if (!string.IsNullOrEmpty(file.Description))
                                                    {
                                                        <div class="text-sm text-secondary-500">@file.Description</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="text-sm text-secondary-400 italic">No description</div>
                                                    }
                                                </div>
                                                <div x-show="editingDescription">
                                                    <form asp-action="UpdateDescription" method="post" class="flex items-center space-x-2 mt-1">
                                                        <input type="hidden" name="fileId" value="@file.Id" />
                                                        <input type="text" name="description" x-model="description" 
                                                               class="text-sm border border-secondary-300 rounded px-2 py-1 flex-1"
                                                               placeholder="Enter description...">
                                                        <button type="submit" class="text-xs bg-primary-600 text-white px-2 py-1 rounded hover:bg-primary-700">
                                                            Save
                                                        </button>
                                                        <button type="button" @@click="editingDescription = false" 
                                                                class="text-xs bg-secondary-300 text-secondary-700 px-2 py-1 rounded hover:bg-secondary-400">
                                                            Cancel
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-900">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            @file.TableCount tables
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-500">
                                        @file.FormattedFileSize
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-500">
                                        <div>@file.UploadedAt.ToString("MMM dd, yyyy")</div>
                                        <div class="text-xs text-secondary-400">@file.FormattedUploadDate</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-500">
                                        @if (file.LastAccessedAt != file.UploadedAt)
                                        {
                                            <div>@file.LastAccessedAt.ToString("MMM dd, yyyy")</div>
                                            <div class="text-xs text-secondary-400">@((DateTime.UtcNow - file.LastAccessedAt).Days) days ago</div>
                                        }
                                        else
                                        {
                                            <span class="text-secondary-400">Never</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                        <form asp-action="Upload" method="post" class="inline">
                                            <input type="hidden" name="SelectedFileId" value="@file.Id" />
                                            <button type="submit" class="text-primary-600 hover:text-primary-900">
                                                Use
                                            </button>
                                        </form>
                                        <button @@click="editingDescription = true" class="text-secondary-600 hover:text-secondary-900">
                                            Edit
                                        </button>
                                        <form asp-action="DeleteFile" method="post" class="inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this file? This action cannot be undone.')">
                                            <input type="hidden" name="fileId" value="@file.Id" />
                                            <button type="submit" class="text-red-600 hover:text-red-900">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-secondary-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-secondary-900">No files stored</h3>
            <p class="mt-1 text-sm text-secondary-500">Get started by uploading your first database file.</p>
            <div class="mt-6">
                <a asp-action="Index" class="btn-primary">
                    <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Upload Database File
                </a>
            </div>
        </div>
    }
</div>
