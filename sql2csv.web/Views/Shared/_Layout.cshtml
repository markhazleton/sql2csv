<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sql2Csv</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üóÑÔ∏è</text></svg>">
</head>

<body class="min-h-screen bg-gradient-to-br from-secondary-50 to-primary-50">
    <header class="bg-white shadow-sm border-b border-secondary-200">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-3">
                        <div class="text-2xl">üóÑÔ∏è</div>
                        <span class="text-xl font-bold text-gradient">Sql2Csv</span>
                    </a>
                </div>
                <div class="flex items-center space-x-8">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                        class="text-secondary-600 hover:text-primary-600 font-medium transition-colors">
                        Home
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="ManageFiles"
                        class="text-secondary-600 hover:text-primary-600 font-medium transition-colors">
                        Manage Files
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="TableDemo"
                        class="text-secondary-600 hover:text-primary-600 font-medium transition-colors">
                        Table Demo
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="About"
                        class="text-secondary-600 hover:text-primary-600 font-medium transition-colors">
                        About
                    </a>
                    <a href="https://github.com/markhazleton/sql2csv" target="_blank" rel="noopener noreferrer"
                        class="inline-flex items-center text-secondary-600 hover:text-primary-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span class="ml-2">GitHub</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-1">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                    clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-800">@TempData["ErrorMessage"]</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-white border-t border-secondary-200 mt-auto">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div class="text-sm text-secondary-500">
                    ¬© @DateTime.Now.Year Sql2Csv Demo. Built with .NET 9.0 and Tailwind CSS.
                </div>
                <div class="text-sm text-secondary-500">
                    <a href="https://github.com/markhazleton/sql2csv" target="_blank" rel="noopener noreferrer"
                        class="hover:text-primary-600 transition-colors">
                        Open Source on GitHub
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/main.bundle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>